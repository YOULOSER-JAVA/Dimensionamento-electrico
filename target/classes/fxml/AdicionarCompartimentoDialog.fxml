<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ao.ipddf.dimensionamento.controller.AdicionarCompartimentoDialogController">
    <content>
        <GridPane hgap="10" vgap="10" padding="20">
            <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtNome" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Tipo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cmbTipo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Comprimento (m):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtComprimento" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Largura (m):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtLargura" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <Label text="Altura (m):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="txtAltura" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
    <buttonTypes>
        <ButtonType text="Adicionar" buttonData="OK_DONE"/>
        <ButtonType text="Cancelar" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>
</DialogPane>